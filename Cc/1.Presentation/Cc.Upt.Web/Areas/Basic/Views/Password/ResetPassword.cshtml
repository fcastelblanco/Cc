@model Cc.Upt.Domain.Dto.LoginDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" name="form" id="form" action="@Url.Action("ResetPasswordAction", "Password")">

    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.UserName)

    <div class="body-sign">
        <div class="row text-center">
            <div class="col-md-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="row text-center">
            <div class="col-md-12">
                <h2 class="margin-bottom-25-px">
                    @Model.UserName
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group mb-lg">
                    <label class="control-label ">Clave actual</label>
                    <input type="password" name="CurrentPassword" class="form-control" required data-rule-required="true" data-msg-required="Éste campo es requerido"/>
                </div>
                <div class="form-group mb-lg">
                    <label class="control-label ">Nueva clave</label>
                    <input type="password" name="Password" class="form-control" required data-rule-required="true" data-msg-required="Éste campo es requerido"/>
                </div>
                <div class="form-group mb-lg">
                    <label class="control-label ">Confirme la nueva clave</label>

                    <input type="password" name="PasswordConfirm" class="form-control" required data-rule-required="true" data-msg-required="Éste campo es requerido"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <input type="submit" value="Cambiar clave" class="btn btn-primary margin-25-px"/>
            </div>
        </div>
    </div>
</form>