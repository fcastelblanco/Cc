@model Cc.Upt.Domain.Company

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="@Url.Action("Save", "Company")" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="Name" class="control-label col-md-2">
                Nombre
            </label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="DateEndSupport" class="control-label col-md-2">
                Fecha de finalización de soporte
            </label>
            <div class="col-md-4">
                <div class="input-group date" id="DateEndSupport">
                    <input type="text" class="form-control" name="DateEndSupport" data-val="true" data-val-required="Fecha final de soporte es requerida" onkeydown="return false;" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.DateEndSupport, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {

            $('#DateEndSupport').datepicker({
                format: "dd/mm/yyyy",
                clearBtn: true,
                autoclose: true,
                language: "es",
                todayBtn: true
            });

        });

    </script>

}
