@model Cc.Upt.Domain.Dto.SavePasswordDto

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" id="form" action="@Url.Action("SaveUserPassword")" autocomplete="off">
    
    <input type="hidden" value="@Model.UserId" name="UserId"/>
    <div class="row text-center">
        <div class="col-md-4">
            
        </div>
        <div class="col-md-4">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr/>
            <label>
                Nueva contraseña
            </label>
            <br/>
            <input type="password" name="Password" data-rule-required="true" data-msg-required="Ingrese la contraseña" class="form-control" data-rule-min="5" data-msg-min="Al menos 5 caracteres"/>
            <br/>
            <br/>
            <label>
                Repita la nueva contraseña
            </label>
            <br/>
            <input type="password" name="ConfirmationPassword" data-rule-required="true" data-msg-required="Ingrese la confirmación de la contraseña" class="form-control" data-rule-min="5" data-msg-min="Al menos 5 caracteres"/>
            <br/>
            <br/>
            <input type="button" id="save" value="Guardar" class="btn btn-default"/>
        </div>
        <div class="col-md-4">

        </div>
    </div>

</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        
        $("#form").validate({
            errorClass: "error-class-validation",
        });
        
        $("#save").click(function () {

            if ($("#form").valid()) {
                $("#form").submit();
            }
        });
        

    </script>
}
