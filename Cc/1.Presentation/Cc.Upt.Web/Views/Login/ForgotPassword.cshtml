
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" name="forgotForm" action="@Url.Action("ResetForgotPassword", "Login", new { userId = ViewBag.User })">

@Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Nueva contraseña</label>
            <div class="col-md-10">
                <input type="password" name="Password" id="Password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Confirme la nueva contraseña</label>
            <div class="col-md-10">
                <input type="password" name="PasswordConfirm" id="PasswordConfirm" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Restablecer contraseña" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/passwordValidate.js"></script>
}