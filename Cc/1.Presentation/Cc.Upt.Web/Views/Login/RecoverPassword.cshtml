@model Cc.Upt.Domain.Dto.LoginDto
@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" name="recoverForm"  id="recoverForm" action="@Url.Action("VerifyPasswordRecover", "Login")">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class = "control-label col-md-2">
                Corre electrónico
            </label>
            <div class="col-md-10">
                <input type="email" name="Email" id="Email" class="form-control" data-rule-required="true" data-msg-required="El correo electrónico es requerido"/>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="validateButton" value="Enviarme instrucciones" class="btn btn-default" />
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Iniciar sesión", "Index")
    </div>
</form>
@section Scripts {
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/recover.password.validate.js"></script>

    <script>

        $("#validateButton").click(function() {

            if ($("#recoverForm").valid()) {
                $("#recoverForm").submit();
            }

        });

    </script>

}




